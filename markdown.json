// Markdown AUTO-COMPLETE SETTINGS

{
	// Headings
	"Heading 1": {
		"prefix": "h1",
		"body": ["# ${1:Heading 1}"],
		"description": "Insert an H1 heading"
	},
	"Heading 2": {
		"prefix": "h2",
		"body": ["## ${1:Heading 2}"],
		"description": "Insert an H2 heading"
	},
	"Heading 3": {
		"prefix": "h3",
		"body": ["### ${1:Heading 3}"],
		"description": "Insert an H3 heading"
	},

	// Lists
	"Unordered List": {
		"prefix": "ul",
		"body": [
			"- ${1:Item 1}",
			"- ${2:Item 2}",
			"- ${3:Item 3}"
		],
		"description": "Insert an unordered list"
	},
	"Ordered List": {
		"prefix": "ol",
		"body": [
			"1. ${1:Item 1}",
			"2. ${2:Item 2}",
			"3. ${3:Item 3}"
		],
		"description": "Insert an ordered list"
	},

	// Links and Images
	"Hyperlink": {
		"prefix": "link",
		"body": ["[${1:Text}](https://${2:example.com})"],
		"description": "Insert a hyperlink"
	},
	"Image": {
		"prefix": "img",
		"body": ["![${1:Alt Text}](https://${2:image-url.com})"],
		"description": "Insert an image"
	},

	// Blockquotes and Code Blocks
	"Blockquote": {
		"prefix": "quote",
		"body": ["> ${1:Quoted text}"],
		"description": "Insert a blockquote"
	},
	"Code Block": {
		"prefix": "```",
		"body": [
			"```",
			"${1:Code goes here}",
			"```"
		],
		"description": "Insert a code block"
	},
	"Displayed Equations": {
		"prefix": "$$",
		"body": ["$$","${2:Equation goes here}","$$"],
		"description": ""
	},
	"Paragraph":{
		"prefix": "p",
		"body": ["<p>${1:text goes here}</p>"],
		"description": ""
	},

	// Tables
	"Table": {
		"prefix": "table",
		"body": [
			"| ${1:Header 1} | ${2:Header 2} | ${3:Header 3} |",
			"|-------------|-------------|-------------|",
			"| ${4:Row 1 Col 1} | ${5:Row 1 Col 2} | ${6:Row 1 Col 3} |",
			"| ${7:Row 2 Col 1} | ${8:Row 2 Col 2} | ${9:Row 2 Col 3} |"
		],
		"description": "Insert a Markdown table"
	},

	// Details & Summary (Collapsible)
	"Details Element": {
		"prefix": "details",
		"body": [
			"<details>",
			"",
			"<summary></summary>",
			" ",
			"</details>"
		],
		"description": "Insert a collapsible details element"
	},
	"Expandable Details (Open by Default)": {
		"prefix": "details-open",
		"body": [
			"<details open>",
			"  <summary>${1:Summary}</summary>",
			"  ",
			"  ${2:Expanded content here}",
			"</details>"
		],
		"description": "Insert an open details element"
	},
	"Summary Element": {
		"prefix": "summary",
		"body": [
			"<summary>", "</summary>"
		],
		"description": "Insert a collapsible details element"
	},

	// Horizontal Rule
	"Horizontal Rule": {
		"prefix": "hr",
		"body": ["<hr>", "<hr>"],
		"description": "Insert a horizontal rule"
	},

	// Strikethrough
	"Strikethrough": {
		"prefix": "strike",
		"body": ["~~${1:strikethrough text}~~"],
		"description": "Insert strikethrough text"
	},

	// Bold and Italics
	"Bold": {
		"prefix": "bold",
		"body": ["**${1:bold text}**"],
		"description": "Insert bold text"
	},
	"Italic": {
		"prefix": "italic",
		"body": ["*${1:italic text}*"],
		"description": "Insert italic text"
	},
	"Bold Italic": {
		"prefix": "bolditalic",
		"body": ["***${1:bold italic text}***"],
		"description": "Insert bold italic text"
	},
	"Subscript":{
		"prefix": "sub",
		"body": ["<sub>", "<sub>"],
		"description": "Subscript"
	},
	"Superscript":{
		"prefix": "sup",
		"body": ["<sup>", "<sup>"],
		"description": "Superscript"
	},

	// Task List
	"Task List": {
		"prefix": "tasklist",
		"body": [
			"- [ ] ${1:Task 1}",
			"- [ ] ${2:Task 2}",
			"- [ ] ${3:Task 3}"
		],
		"description": "Insert a task list"
	}
}
